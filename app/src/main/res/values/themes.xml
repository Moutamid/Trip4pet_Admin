<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Trip4petAdmin" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!--  Font Family -->
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="Theme.Trip4petAdmin" parent="Base.Theme.Trip4petAdmin" />

    <style name="Theme.ChipsColor" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconTint">@color/grey</item>
    </style>

    <style name="DialogAnim">
        <item name="android:windowEnterAnimation">@animator/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@animator/slide_out_bottom</item>
    </style>

</resources>